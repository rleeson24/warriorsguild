@model WarriorsGuild.Models.Account.SendCodeViewModel
@{
	ViewBag.Title = "Send";
}
@using WarriorsGuild.Utilities

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, true, new { @class = "form-horizontal", role = "form" }))
{
	@Html.AntiForgeryToken()
	@Html.Hidden("rememberMe", @Model.RememberMe)
	<h4>Send verification code</h4>
	<hr />
	<div class="row">
		<div class="col-md-8">
			Select Two-Factor Authentication Provider:
			@Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
			<input type="submit" value="Submit" class="btn btn-default" />
		</div>
	</div>
}

@section Scripts {
	<script src="@Url.ContentVersioned("/bundles/jqueryval.js")" defer></script>
}
