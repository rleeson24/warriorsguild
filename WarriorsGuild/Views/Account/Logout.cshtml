@model WarriorsGuild.Areas.Account.Models.LogoutViewModel

@using WarriorsGuild.Utilities

<div class="logout-page">
	<script src="@Url.ContentVersioned("/bundles/oidc.js")"></script>
	<script type="text/javascript">
		oidcManager.signoutRedirect().then(function () {
			window.location = "/";
		}).catch(function (e) {
			console.error(e);
		});
	</script>
	<div class="lead">
		<h1>Logout</h1>
		<p>Would you like to logout of IdentityServer?</p>
	</div>

	<form asp-action="Logout">
		<input type="hidden" name="logoutId" value="@Model.LogoutId" />
		<div class="form-group">
			<button class="btn btn-primary">Yes</button>
		</div>
	</form>
</div>
