    <!-- The modal -->
<div class="modal fade" id="returnReasonDialog" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modalLabel">Return</h4>
            </div>
            <div class="modal-body">
                <p>Reason for returning to Warrior:</p>
                <textarea data-bind="value: dataModel.reasonForReturn" style="width:100%; height:100px"></textarea>
            </div>
            <div class="modal-footer">
                <button class="btn btn-transparent" data-bind="click: $data.cancelReturn" data-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" data-bind="click: $data.returnRank" data-dismiss="modal">Return to Warrior</button>
            </div>
        </div>
    </div>
</div>
