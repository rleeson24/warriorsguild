@model WarriorsGuild.Models.ManageSubscriptionViewModel
@{
	ViewBag.Title = "Manage Subscription";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var StripeKey = ViewBag.StripeKey;
	var UserIsAdmin = User.IsInRole("Admin");
	var UserIsAdminString = UserIsAdmin.ToString().ToLower();
	var UserIsGuardian = User.IsInRole("Guardian");
	var UserIsGuardianString = UserIsGuardian.ToString().ToLower();
}
@using WarriorsGuild.Data.Models.Payments
@using WarriorsGuild.Utilities

<link href="@Url.ContentVersioned("/css/stripe.css")" rel="stylesheet">

<!-- ko with: subscriptions -->
<section>
	<div data-bind="with: dataModel.CurrentSubscription(), visible: dataModel.CurrentSubscription()" style="display:none;">
		<div class="container">
			<div class="row">
				<div class="col-md-12 text-center">
					<h1>Current Subscription</h1>
				</div>
			</div>
			<div class="row text-center">
				<h2 style="font-weight:bold" data-bind="text: description"></h2>
			</div>
			<div class="row">
				<div class="col-md-offset-3 col-md-3 text-center">
					<div>Total Guardians Allowed</div>
					<h3 style="font-weight: bold" data-bind="text: additionalGuardians + numberOfGuardians"></h3>
				</div>
				<div class="col-md-3 text-center">
					<div>Total Warriors Allowed</div>
					<h3 style="font-weight: bold" data-bind="text: additionalWarriors + numberOfWarriors"></h3>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4 text-center">
					<div>Billing Frequency</div>
					<h3 style="font-weight: bold" data-bind="text: frequency == 0 ? 'Monthly' : 'Yearly'"></h3>
				</div>
				<div class="col-md-4 text-center">
					<div>Next Payment Due</div>
					<h2 style="font-weight: bold" data-bind="text: nextPaymentDue.toLocaleDateString()"></h2>
				</div>
				<div class="col-md-4 text-center">
					<div>Total <span data-bind="text: (frequency == 0 ? 'Monthly' : 'Yearly')"></span> Cost</div>
					<h2 style="font-weight: bold" data-bind="text: totalPeriodicCharge.formatted()"></h2>
				</div>
			</div>
			<div class="row text-center" data-bind="if: guardianUsers.length > 0">
				<div class="col-xs-12">
					<h3>Guardians (<span data-bind="text: guardianUsers.length"></span>)</h3>
				</div>
				@*<div class="clearfix"></div>
					<ul class="list-group list-inline list-unstyled card">
						<li class="card-container" data-bind="foreach: guardianUsers">
							<span class="glyphicon glyphicon-remove"></span>
							<h3 data-bind="text: firstName + ' ' + lastName"></h3>
							<div data-bind="visible: isGuardian">Guardian</div>
							<div data-bind="visible: isWarrior">Warrior</div>
						</li>
					</ul>*@
				<!-- ko foreach: guardianUsers -->
				<div class="col-xs-12 col-md-3">
					<div class="card card-container">
						<span class="glyphicon glyphicon-remove"></span>
						<h5 data-bind="text: firstName + ' ' + lastName"></h5>
						<h6 data-bind="visible: isGuardian">Guardian</h6>
						<h6 data-bind="visible: isWarrior">Warrior</h6>
					</div>
				</div>
				<!-- /ko -->
			</div>
			<div class="row text-center" data-bind="if: warriorUsers.length > 0">
				<div class="col-xs-12">
					<h3>Warriors (<span data-bind="text: warriorUsers.length"></span>)</h3>
				</div>
				<div class="clearfix"></div>
				<!-- ko foreach: warriorUsers -->
				<div class="col-xs-12 col-md-3">
					<div class="card card-container">
						<span class="glyphicon glyphicon-remove"></span>
						<h5 data-bind="text: firstName + ' ' + lastName"></h5>
						<h6 data-bind="visible: isGuardian">Guardian</h6>
						<h6 data-bind="visible: isWarrior">Warrior</h6>
					</div>
				</div>
				<!-- /ko -->
			</div>
		</div>
	</div>
</section>

<section>
	<div class="container">
		<div class="row">
			<div class="col-xs-12 text-center">
				<h3 data-bind="text: dataModel.CurrentSubscription() ? 'Update Subscription' : 'Create Subscription'"></h3>

				<div id="retrievingOptionsMessage" class="alert alert-info fade in" data-bind="visible: dataModel.RetrievingPlans()" style="display:none">
					<img class="icon-spin" style="width: 1em; height: 1em;" src="~/images/busy.gif" />	Please wait as we retrieve existing payment plans.
				</div>
				<div id="noOptionsMessage" class="alert alert-danger fade in" data-bind="visible: !dataModel.RetrievingPlans() && dataModel.PriceOptions().length === 0" style="display:none;">
					No Payment Plans were found.  Please try again.  If you continue to see this message, please contact the site administrator for assistance.
				</div>
				<div class="form-group" data-bind="visible: !dataModel.RetrievingPlans()" style="display:none;">
					<label class="control-label">Choose plan:</label>
					<select class="form-control" data-bind="value: dataModel.SelectedPriceOption, options: dataModel.PriceOptions, optionsText: 'description', optionsCaption: 'Choose...'" style="margin-bottom: 2em;"></select>
				</div>
			</div>
		</div>
	</div>
</section>

